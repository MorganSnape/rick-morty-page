---
interface Props {
  active: boolean;
}

const { active } = Astro.props;
---

<!-- variable $$ () es un metodo para que solo en caso de que sea true el boleano mostrara el contenido si es false no lo mostrara -->

{
  active && (
    <svg
      class="icon separador visible"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="#ffffff"
      fill="none"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <path stroke="none" d="M0 0h24v24H0z" fill="none" />
      <path d="M8 12l0 .01" />
      <path d="M12 12l0 .01" />
      <path d="M16 12l0 .01" />
    </svg>
  )
}

<style>
  .separador {
    height: 40px;
    width: 40px;
  }
</style>
